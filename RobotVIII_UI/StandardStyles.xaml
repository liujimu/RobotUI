                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <SolidColorBrush x:Key="PressedColorBrush" Color="#FFD24726"/>
    <SolidColorBrush x:Key="BtnNormalColorBrush" Color="#FF4472C4"/>
